
# ================================
# Texas Poker CLI 环境变量配置
# ================================

# ================================
# 服务器配置
# ================================
# API 服务器基础 URL
TEXAS_API_BASE_URL=http://54.152.176.249/texas/index.php

# API 请求超时时间（毫秒）
TEXAS_API_TIMEOUT=30000

# API 请求重试次数
TEXAS_API_RETRY_COUNT=3

# ================================
# 用户默认配置
# ================================
# 默认密码哈希值（用于注册和登录）
TEXAS_DEFAULT_PASSWORD=dc483e80a7a0bd9ef71d8cf973673924

# 客户端平台标识
TEXAS_CLIENT_PLATFORM=Win10-Windows.Desktop

# 客户端版本号
TEXAS_CLIENT_VERSION=20160306

# 国家代码
TEXAS_COUNTRY_CODE=CN

# ================================
# 业务逻辑配置
# ================================
# 福袋领取数量
TEXAS_BENEFIT_COUNT=2

# 请求间隔延迟（毫秒）
TEXAS_REQUEST_DELAY=500

# ================================
# 文件路径配置
# ================================
# 数据输出目录
TEXAS_OUTPUT_DIR=./data/accounts

# 日志文件目录
TEXAS_LOG_DIR=./logs

# 导出文件目录
TEXAS_EXPORT_DIR=./data/exports

# ================================
# 应用程序配置
# ================================
# 应用程序名称
TEXAS_APP_NAME=Texas Poker CLI

# 应用程序版本
TEXAS_APP_VERSION=1.0.0

# 开发者信息
TEXAS_APP_AUTHOR=Lionelsz
TEXAS_APP_EMAIL=gsuzher@gmail.com
TEXAS_APP_GITHUB=https://github.com/LionelSZ

# ================================
# UI 界面配置
# ================================
# 启动时是否清屏
TEXAS_UI_CLEAR_CONSOLE=true

# 是否显示 Logo
TEXAS_UI_SHOW_LOGO=true

# 是否启用彩色输出
TEXAS_UI_ENABLE_COLORS=true

# 菜单显示列数
TEXAS_UI_MENU_COLUMNS=2

# ================================
# 操作配置
# ================================
# 默认重试次数
TEXAS_DEFAULT_RETRY_COUNT=2

# 最大并发请求数
TEXAS_MAX_CONCURRENT_REQUESTS=5

# 是否启用进度条
TEXAS_ENABLE_PROGRESS_BAR=false

# ================================
# 批处理配置
# ================================
# 批处理延迟时间（毫秒）
TEXAS_BATCH_DELAY=500

# 批处理重试次数
TEXAS_BATCH_RETRY_COUNT=1

# 是否显示批处理日志
TEXAS_BATCH_SHOW_LOGS=true

# ================================
# 日志配置
# ================================
# 日志级别 (error, warn, info, debug)
TEXAS_LOG_LEVEL=info

# 是否启用文件日志
TEXAS_LOG_TO_FILE=true

# 日志文件最大大小（MB）
TEXAS_LOG_MAX_SIZE=10

# 保留的日志文件数量
TEXAS_LOG_MAX_FILES=5

# ================================
# 数据库配置（如果需要）
# ================================
# 数据库类型 (sqlite, mysql, postgresql)
# TEXAS_DB_TYPE=sqlite

# 数据库文件路径（SQLite）
# TEXAS_DB_PATH=./data/texas.db

# 数据库连接 URL（MySQL/PostgreSQL）
# TEXAS_DB_URL=mysql://user:password@localhost:3306/texas

# ================================
# 安全配置
# ================================
# 加密密钥（用于敏感数据加密）
# TEXAS_ENCRYPTION_KEY=your-secret-encryption-key

# JWT 密钥（如果使用 JWT）
# TEXAS_JWT_SECRET=your-jwt-secret

# ================================
# 开发环境配置
# ================================
# 运行环境 (development, production, test)
NODE_ENV=development

# 是否启用调试模式
TEXAS_DEBUG=false

# 是否启用详细日志
TEXAS_VERBOSE=false

# ================================
# 网络配置
# ================================
# 代理服务器配置（如果需要）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# 用户代理字符串
TEXAS_USER_AGENT=Texas-Poker-CLI/1.0.0

# ================================
# 性能配置
# ================================
# 内存限制（MB）
TEXAS_MEMORY_LIMIT=512

# 最大文件大小（MB）
TEXAS_MAX_FILE_SIZE=100

# 缓存过期时间（秒）
TEXAS_CACHE_TTL=3600

# ================================
# 通知配置（可选功能）
# ================================
# 邮件通知配置
# TEXAS_EMAIL_HOST=smtp.gmail.com
# TEXAS_EMAIL_PORT=587
# TEXAS_EMAIL_USER=your-email@gmail.com
# TEXAS_EMAIL_PASS=your-app-password

# 微信通知配置
# TEXAS_WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx

# ================================
# 备份配置
# ================================
# 是否启用自动备份
TEXAS_AUTO_BACKUP=true

# 备份间隔（小时）
TEXAS_BACKUP_INTERVAL=24

# 备份保留天数
TEXAS_BACKUP_RETENTION_DAYS=7

# 备份目录
TEXAS_BACKUP_DIR=./backups

